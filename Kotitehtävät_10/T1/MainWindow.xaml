<Window x:Class="T1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T1"
        mc:Ignorable="d"
        Title="Shopping list" Height="350" Width="290.286">
    <Grid>
        <StackPanel x:Name="CheckList" HorizontalAlignment="Left" Height="170" Margin="18,10,0,0" VerticalAlignment="Top" Width="246" >

            <CheckBox x:Name="Milk" Content="Milk" />
            <CheckBox x:Name="Butter" Content="Butter" />
            <CheckBox x:Name="Beer" Content="Beer" />
            <CheckBox x:Name="Chicken" Content="Chicken" />
            <CheckBox x:Name="Lemonade" Content="Lemonade" />
        </StackPanel>
        <Button x:Name="btnBuy" Content="Buy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="43" Margin="18,194,0,0" Click="btnBuy_Click"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="246" Margin="18,240,0,0"/>
        <TextBlock x:Name="textBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Shopping List" VerticalAlignment="Top" Margin="18,219,0,0"/>

    </Grid>
</Window>
